<div class="container">
  <div class="row">
    <div class="col-6">
      <h1><%= form_title %></h1>
      <%= form_for @product do |n| %>
      <div class="form-group">
        <%= n.text_field :name, class: 'form-control input-lg', placeholder: 'Name product' %>
      </div>
      <div class="form-group">
        <%= n.number_field :price, class: 'form-control input-lg', placeholder: 'Price product' %>
      </div>
      <div class="form-group">
        <%= n.submit form_title %>
      </div>
      <% end %>
    </div>
  </div>
</div>
